{% extends 'base.html.twig' %}

{% block title %}Edit Series{% endblock %}

{% block body %}
    <div class="container text-white">
        <h1>Edit Series</h1>
        {{ form_start(form) }}
            {{ form_widget(form) }}
        <div class="col-md-6 col-sm-12">
            <div class="d-flex">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
                </div>
                <div class="col-md-4">
                <a href="{{ path('app_series_index') }}" class="btn btn-primary">back to list</a>
                </div>
                <div class="col-md-4">
                    <div class="btn btn-primary text-white">
                        {{ include('series/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

